<%= form_for(@idea) do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "erro") %> não permitiram que essa ideia fosse salva:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title,"(Fazer o que?)" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :lead, "Legenda" %>
    <%= f.text_field :lead, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_time, "Data" %>
    <%= f.date_field :event_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_time, "Horário" %>
    <%= f.time_field :event_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image, "Adicionar uma imagem à ideia" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Publicar ideia", class: "btn btn-default" %>
  </div>

<% end %>
